{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}